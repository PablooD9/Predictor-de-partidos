package quiniela;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

public class CargarEquipos {
	
	private static final int NUM_OF_TEAMS= 20;
	private Equipos equipos;
	
	public CargarEquipos() throws IOException
	{
		equipos= new Equipos();
	}
	
	public static void main(String[] args) throws IOException {
		javax.swing.JFileChooser j= new javax.swing.JFileChooser();
		j.showOpenDialog(j);
		String path= j.getSelectedFile().getAbsolutePath();
		chargeTeams(path);
    }
	
	public static void chargeTeams(String fichero) throws IOException
	{
		BufferedReader file= new BufferedReader(
								new FileReader(fichero));
		int n= 1;
		while (n != NUM_OF_TEAMS)
		{
			teams.add("Hola"+n);
			System.out.println(teams.get(n-1));
			n++;
		} 
		file.close();
	}
}
